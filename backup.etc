SRCD="/etc/"
TGTD="/srv/backup/etc/"
DAY=$(date +%Y%m%d)
MONTH=$(date +%Y%m)
BCKP=etc-$DAY.tar.gz
LOG=log-$MONTH.log
tar -g $TGTD$LOG -cpzf $TGTD$BCKP $SRCD
